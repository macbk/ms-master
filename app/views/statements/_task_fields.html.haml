.nested-fields
	.form-horizontal
		.form-group
			.col-sm-8
				= f.text_field :title, placeholder: 'Task Title', class: 'form-control'
			.col-sm-3
				= f.text_field :term, placeholder: 'Deadline', class: 'form-control'
			.col-sm-1
				= link_to_remove_association "Remove", f, class: 'btn btn-danger'